<section class="hero is-link is-fullheight-with-navbar">
<div class="hero-body">
<div class="container">

<div class="columns">
  <div class="column">
    
  </div>
<div class="column">
<h1 class="title">
Crear carrete
</h1>

<%= form_with(model: @party, method: :post, html: {class: 'box'}) do |form| %>

    <div class="field"> 
        <%=form.label :titulo, "Título" %><br />
        <%=form.text_field :titulo, required:true%>
    </div>

    <div class="field"> 
        <%=form.label :descripcion, "Descripción" %><br />
        <%=form.text_field :descripcion, required:true%>
    </div>

    <div class="field"> 
    <%=form.label :direccion, "Dirección"%><br />
    <%=form.text_field :direccion, required:true%>
    </div>

    <div class="field"> 
        <%=form.label :capacidad, "Capacidad"%><br />
        <%=form.text_field :capacidad, required:true%>
    </div>

    <% @service_all.each do |trabajo| %>
      <div class="field"> 
          <%= form.check_box :verified,{class:"form-check-input", type:"checkbox"}, true, false %>
          <%=form.label :verified, " Nombre: #{trabajo.nombre}, Precio: #{trabajo.precio}, Capacidad: #{trabajo.cap_max} "%></br>
      </div>
    <% end %>

    <div class="field"> 
        <%=form.label :costo, "Costo"%><br />
        <%=form.text_field :costo, required:true%>
    </div>
    
    <p>
      <div class="field">
        Seleccione el id de la comuna del carrete:
        <%= form.select :comuna_id, options_for_select(@lista), {class: 'chosen-select'} %>
      </div>

    </p>

    <div class="actions"> 
        <%=form.submit "Crear carrete", class:"button is-succes" %>
    </div>
    <div class="field">
        <%= form.hidden_field :user_id, :value => current_user.id%>
    </div>
<% end %>
<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
        </tr>
    </thead>

    <tbody>
        <% @comunas.each do |comuna| %>
            <tr>
                <td><%= comuna.id %></td>
                <td><%= comuna.nombre%></td>
            </tr>
        <% end %>
    </tbody>
</table>


</div>
  <div class="column">
    
  </div>

</div>


</div>
</div>
