<section class="hero is-link is-fullheight-with-navbar">
<div class="hero-body">
<div class="container">

<div class="columns">
  <div class="column">
    
  </div>
<div class="column">
<h1 class="title">
Crear carrete
</h1>

<%= form_with(model: @party, method: :post, html: {class: 'box'}) do |form| %>

    <div class="field"> 
        <%=form.label :titulo, "Título" %><br />
        <%=form.text_field :titulo, required:true%>
    </div>

    <div class="field"> 
        <%=form.label :descripcion, "Descripción" %><br />
        <%=form.text_field :descripcion, required:true%>
    </div>

    <div class="field"> 
    <%=form.label :direccion, "Dirección"%><br />
    <%=form.text_field :direccion, required:true%>
    </div>

    <div class="field">
      <%=form.label :comuna_id, "Comuna"%><br />
      <%= form.select :comuna_id, @comunas.collect { |comuna| [comuna.nombre, comuna.id] } %>
    </div>

    <div class="field"> 
        <%=form.label :capacidad, "Capacidad"%><br />
        <%=form.text_field :capacidad, required:true%>
    </div>

    <div class="field">
      <%=form.label :service_ids, "Servicios"%><br />
      <% for service in Service.all %>
        <% if service.verified%>
          <div>
              <%= check_box_tag "party[service_ids][]", service.id, @party.services.include?(service) %>
              <%= service.nombre %> ($<%= service.precio %>)
          </div>
        <% end %>
      <% end %>
    </div>

    <div class="field"> 
        <%=form.label :costo, "Costo"%><br />
        <%=form.text_field :costo, required:true%>
    </div>
    
    <div class="field">
        <%= form.hidden_field :user_id, :value => current_user.id%>
    </div>

    <div class="actions"> 
        <%=form.submit "Crear carrete", class: "button is-success" %>
    </div>

    
<% end %>



</div>
  <div class="column">
    
  </div>

</div>


</div>
</div>
