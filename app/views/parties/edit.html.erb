<h1>Editar party</h1>

<p> <%= notice %> </p>

<%= form_with(model: @party, method: :patch) do |form| %>
    <div class="field"> 
        <%=form.label :titulo%>
        <%=form.text_field :titulo%>
    </div>
    <br>
    <div class="field"> 
        <%=form.label :descripcion%>
        <%=form.text_field :descripcion%>
    </div>
    <br>
    <div class="field"> 
    <%=form.label :direccion%>
    <%=form.text_field :direccion%>
    </div>
    <br>
    <div class="field"> 
        <%=form.label :capacidad%>
        <%=form.text_field :capacidad%>
    </div>
    <br>
    <div class="field"> 
        <%=form.label :costo%>
        <%=form.text_field :costo%>
    </div>
    <br>
    <div class="action"> 
        <%=form.submit%>
    </div>
<% end %>
