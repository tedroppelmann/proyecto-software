<section class="hero is-success is-fullheight">

<nav class="navbar" role="navigation" aria-label="main navigation">
  <div id="navbarBasicExample" class="navbar-menu">
    <div class="navbar-start">
      <%= link_to "Inicio", static_pages_home_path, class:"navbar-item" %>
      <%= link_to "Fiestas", parties_index_path, class:"navbar-item"%>
    </div>

    <div class="navbar-end">
      <div class="navbar-item">
        <div class="buttons">
          <% if not current_user %>
          <%= link_to 'Registrarse', new_user_registration_path, class:"button is-link" %> 
          <%= link_to 'Iniciar sesión', new_user_session_path, class:"button is-link" %> 
          <% else %> 
          <%= link_to "Editar cuenta", edit_user_registration_path, class:"button is-link" %> 
          <%= link_to 'Cerrar sesión', destroy_user_session_path, method: :delete, class:"button is-link" %> 
          <% end %>
        </div>
      </div>
    </div>
  </div>
</nav>

<div class="hero-body">
<div class="container">

<div class="columns">
  <div class="column">
    
  </div>

  <div class="column">
      <h1 class="title">
      Iniciar sesión
      </h1>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'box'}) do |f| %>
        <div class="field">
          <%= f.label :email, 'Correo electrónico' %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password, 'Contraseña' %><br />
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, 'Recordar' %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Ingresar", class: "button is-link" %>
        </div>
      <% end %>
      <%= link_to "¿Olvidaste tu contraseña?", new_password_path(resource_name), class: "button is-warning" %>

      </div>
  <div class="column">
    
  </div>

</div>


</div>
</div>
</section>