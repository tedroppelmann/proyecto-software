<section class="hero is-link is-fullheight-with-navbar">
<div class="hero-body">
  <div class="container">
  
<div class="columns is-mobile is-centered">
<div class="column is-half">

<h1 class="title">
Crear cuenta
</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'box'}) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field is-horizontal">
    <div class="field-label is-normal">
      <label class="label is normal">Nombre</label>
    </div>
    <div class="field-body">
      <div class="field"> 
          <%= f.text_field :first_name, class:"input", autofocus: true, required:true%>
      </div>
    </div>
  </div>

  <div class="field is-horizontal">
    <div class="field-label is-normal">
      <label class="label is normal">Apellido</label>
    </div>
    <div class="field-body">
      <div class="field"> 
          <%= f.text_field :last_name, class:"input", autofocus: true, required:true%>
      </div>
    </div>
  </div>

  <div class="field is-horizontal">
    <div class="field-label is-normal">
      <label class="label is normal">Edad</label>
    </div>
    <div class="field-body">
      <div class="field"> 
          <%= f.number_field :age, class:"input", autofocus: true, required:true%>
      </div>
    </div>
  </div>

  <div class="field is-horizontal">
    <div class="field-label is-normal">
      <label class="label is normal">Email</label>
    </div>
    <div class="field-body">
      <div class="field"> 
          <%= f.text_field :email, class:"input", autofocus: true, required:true%>
      </div>
    </div>
  </div>

  <div class="field is-horizontal">
    <div class="field-label is-normal">
      <label class="label is normal">Foto</label>
    </div>
    <div class="field-body">
      <div class="field"> 
          <%= f.file_field :image, class:"file-label"%>
      </div>
    </div>
  </div>

  <div class="field is-horizontal">
    <div class="field-label is-normal">
      <label class="label is normal">Teléfono</label>
    </div>
    <div class="field-body">
      <div class="field"> 
          <%= f.telephone_field :phone_number, class:"input", autofocus: true, required:true%>
      </div>
    </div>
  </div>

  <div class="field is-horizontal">
    <div class="field-label is-normal">
      <label class="label is normal">Contraseña</label>
    </div>
    <div class="field-body">
      <div class="field"> 
          <%= f.password_field :password, class:"input", autofocus: true, required:true%>
      </div>
    </div>
  </div>

  <div class="field is-horizontal">
    <div class="field-label is-normal">
      <label class="label is normal">Confirmar contraseña</label>
    </div>
    <div class="field-body">
      <div class="field"> 
          <%= f.password_field :password_confirmation, class:"input", autofocus: true, required:true%>
      </div>
    </div>
  </div>

  <div class="field">
    <%= f.hidden_field :monedero, :value => 0%>
  </div>

  <div class="field is-horizontal">
    <div class="field-label">
    </div>
    <div class="field-body">
      <div class="field">
        <div class="actions">
          <%=f.submit "Crear cuenta", class: "button is-success" %>
        </div>
      </div>
    </div>
  </div>

<% end %>


</div>
</div>
</section>