<h1>Mis Comentarios</h1>

<table>
    <thead>
        <tr>
            <th>Contenido</th>
            <th>Fecha</th>
        </tr>
    </thead>

    <tbody>
        <% @comentarios.each do |comentario| %>
            <tr>
                <td><%= comentario.contenido %></td>
                <td><%= comentario.created_at.strftime("%d-%m-%Y")%></td>
                <td><%= link_to "ver detalle", comentario_path(comentario.id)%></td>
            </tr>
            
        <% end %>
    </tbody>
</table>

<%= link_to "volver a agregar comentario", comentarios_new_path%><br>
<%= link_to "volver al inicio", static_pages_home_path%>